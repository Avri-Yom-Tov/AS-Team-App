{
  "name": "npm-script",
  "version": "1.0.0",
  "description": "A powerful and user-friendly Electron application for managing your tasks efficiently.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder",
    "dist": "electron-builder --publish always"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dialog": "^0.3.1",
    "electron-progressbar": "^2.0.1",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "electron": "^23.1.1",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.1"
  },
  "build": {
    "productName": "AS-Team-App",
    "appId": "com.example.AS-Team-App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "accessories/**/*",
      "menus/**/*",
      "html/**/*",
      "img/**/*",
      "runCommand/**/*",
      "style/**/*",
      "utils/**/*",
      "window/**/*",
      "main.js",
      "package.json",
      "package-lock.json"
    ],
    "win": {
      "target": "nsis",
      "publisherName": "AS-Team-App.com",
      "icon": "./img/NICE-LOGO.jpg"
    }
  }
}
